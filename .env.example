# ===============================
# AWS Configuration
# ===============================
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# ===============================
# Project Configuration
# ===============================
PROJECT_NAME=financial-data-pipeline
ENVIRONMENT=dev
DEPLOYMENT_TIMESTAMP=

# ===============================
# Financial APIs
# ===============================
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
FRED_API_KEY=your_fred_api_key
YAHOO_FINANCE_TIMEOUT=30

# ===============================
# AWS S3 Configuration
# ===============================
S3_BUCKET_RAW_DATA=financial-data-raw-dev
S3_BUCKET_PROCESSED_DATA=financial-data-processed-dev
S3_BUCKET_LOGS=financial-data-logs-dev
S3_BUCKET_AIRFLOW=financial-data-airflow-dev

# ===============================
# Redshift Configuration
# ===============================
REDSHIFT_CLUSTER_IDENTIFIER=financial-data-cluster-dev
REDSHIFT_DATABASE=financial_data
REDSHIFT_HOST=your-cluster.region.redshift.amazonaws.com
REDSHIFT_PORT=5439
REDSHIFT_USER=admin
REDSHIFT_PASSWORD=your_redshift_password
REDSHIFT_SCHEMA_RAW=raw_data
REDSHIFT_SCHEMA_STAGING=staging
REDSHIFT_SCHEMA_MARTS=marts

# ===============================
# Airflow Configuration
# ===============================
AIRFLOW_ENVIRONMENT_NAME=financial-data-mwaa-dev
AIRFLOW_S3_BUCKET=financial-data-airflow-dev
AIRFLOW_EXECUTION_ROLE_ARN=arn:aws:iam::123456789012:role/service-role/AmazonMWAA-ExecutionRole
AIRFLOW_DAG_S3_PATH=dags/
AIRFLOW_PLUGINS_S3_PATH=plugins/
AIRFLOW_REQUIREMENTS_S3_PATH=requirements.txt

# ===============================
# dbt Configuration
# ===============================
DBT_PROFILES_DIR=./dbt/profiles
DBT_PROJECT_DIR=./dbt
DBT_TARGET=dev

# ===============================
# Data Sources Configuration
# ===============================
# Stock symbols to track (comma-separated)
STOCK_SYMBOLS=AAPL,MSFT,GOOGL,AMZN,TSLA,META,NVDA,NFLX,CRM,ADBE
# Sector ETFs
SECTOR_ETFS=XLK,XLV,XLF,XLI,XLE,XLP,XLY,XLU,XLB,XLRE,XLC
# Market indices
MARKET_INDICES=SPY,QQQ,DIA,IWM,VTI

# ===============================
# Pipeline Configuration
# ===============================
DATA_INGESTION_FREQUENCY=daily
DATA_RETENTION_DAYS=365
BATCH_SIZE=100
MAX_RETRIES=3
RETRY_DELAY=300

# ===============================
# Monitoring & Alerting
# ===============================
ENABLE_MONITORING=true
SLACK_WEBHOOK_URL=your_slack_webhook_url
EMAIL_NOTIFICATIONS=your_email@example.com
CLOUDWATCH_LOG_GROUP=/aws/mwaa/financial-data-pipeline
CLOUDWATCH_LOG_RETENTION_DAYS=30

# ===============================
# Data Quality
# ===============================
ENABLE_DATA_QUALITY_CHECKS=true
DATA_QUALITY_THRESHOLD=0.95
ANOMALY_DETECTION_ENABLED=true
SCHEMA_VALIDATION_ENABLED=true

# ===============================
# Security
# ===============================
ENCRYPTION_KEY=your_encryption_key_here
ENABLE_SSL=true
ENABLE_IAM_AUTHENTICATION=true

# ===============================
# Development Configuration
# ===============================
DEBUG=false
LOG_LEVEL=INFO
TESTING_MODE=false
MOCK_API_RESPONSES=false

# ===============================
# Database Connection Strings
# ===============================
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://admin:password@your-cluster.region.redshift.amazonaws.com:5439/financial_data

# ===============================
# Terraform Variables
# ===============================
TF_VAR_project_name=financial-data-pipeline
TF_VAR_environment=dev
TF_VAR_aws_region=us-east-1
TF_VAR_availability_zones=["us-east-1a", "us-east-1b"]